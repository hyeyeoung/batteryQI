<Window x:Class="batteryQI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ScottPlot="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF"
        xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
        Title="BatteryQI" Height="760" Width="1280" Background="Transparent" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Border Background="#cfd5e5" CornerRadius="10" BorderThickness="2" BorderBrush="#ebedf3"
            Padding="20" MouseDown="Border_MouseDown">
        <Border CornerRadius="30">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#fefefe" Offset="0"/>
                    <GradientStop Color="#fefefe" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="130"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="300"/>
                </Grid.ColumnDefinitions>

                <!-- Left Menu -->
                <Border CornerRadius="30" Background="#7163ba" Margin="20">
                    <Grid>
                        <StackPanel VerticalAlignment="Top">
                            <Separator Background="#877cc5" Margin="20 55 20 10" Height="0.8"/>
                            <Button Style="{StaticResource topMenuButton}" Background="#5a5080" Click="HomeButton_Click">
                                <fa:IconImage Icon="House" Style="{StaticResource menuButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource topMenuButton}" Background="#5a5080" Click="ImageButton_Click">
                                <fa:IconImage Icon="Image" Style="{StaticResource menuButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource topMenuButton}" Background="#5a5080" Click="ChartButton_Click">
                                <fa:IconImage Icon="Image" Style="{StaticResource menuButtonIcon}"/>
                            </Button>
                            <Button Style="{StaticResource topMenuButton}" Background="#5a5080" Click="ManagerButton_Click">
                                <fa:IconImage Icon="user" Style="{StaticResource menuButtonIcon}"/>
                            </Button>
                        </StackPanel>

                        <Separator Background="#877cc5" Margin="20 0 20 90" Height="0.8" VerticalAlignment="Bottom"/>
                        <Button Style="{StaticResource topMenuButton}" VerticalAlignment="Bottom" Margin="0 0 0 25" Click="ExitButton_Click">
                            <fa:IconImage Icon="ArrowRightFromBracket" Style="{StaticResource menuButtonIcon}"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Main Section -->
                <Grid Grid.Column="1" Margin="5 20 25 20">
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="450"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--Title Section-->
                    <StackPanel Margin="7 10 0 25">
                        <TextBlock Text="Dashboard" Foreground="#797295" FontSize="13"/>
                        <TextBlock Text="BatteryQI" Style="{StaticResource titleText}"/>
                    </StackPanel>

                    <!--Main Image Insert Section-->
                    <Border Grid.Row="1" Grid.ColumnSpan="2" CornerRadius="20" Margin="0 0 20 20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                <GradientStop Color="#6a5dae" Offset="0"/>
                                <GradientStop Color="#54479c" Offset="1.2"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="배터리 이미지" Margin="20 15" FontSize="20" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Top"/>

                            <!--Main Image PreView Section-->
                            <Border CornerRadius="10" Margin="20 50 20 70">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                        <GradientStop Color="White" Offset="0"/>
                                        <GradientStop Color="White" Offset="1.2"/>
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Image Name="PreviewImage" Stretch="Fill"/>
                            </Border>

                            <Button Style="{StaticResource imageSectionButton}" Margin="0 360 0 0" Content="이미지 선택" Click="ImageSelectButton_Click" FontSize="17" FontWeight="SemiBold" />
                        </Grid>
                    </Border>

                    <!--Middle Right Section-->
                    <Grid Grid.Column="2" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--Top Box-->
                        <Border CornerRadius="20" Background="#7163ba">
                            <StackPanel Orientation="Vertical" Margin="20">
                                <TextBlock Text="배터리 이미지 정보" Margin="0 0 0 30" FontSize="20" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Top" HorizontalAlignment="Center"/>

                                <ComboBox Width="150" Margin="10 15">
                                    <ComboBoxItem Content="옵션 1"/>
                                    <ComboBoxItem Content="옵션 2"/>
                                    <ComboBoxItem Content="옵션 3"/>
                                </ComboBox>

                                <ComboBox Width="150" Margin="10 15">
                                    <ComboBoxItem Content="옵션 A"/>
                                    <ComboBoxItem Content="옵션 B"/>
                                    <ComboBoxItem Content="옵션 C"/>
                                </ComboBox>

                                <ComboBox Width="150" Margin="10 15">
                                    <ComboBoxItem Content="선택 1"/>
                                    <ComboBoxItem Content="선택 2"/>
                                    <ComboBoxItem Content="선택 3"/>
                                </ComboBox>

                                <TextBlock Text="촬영장소" Margin="0 20" HorizontalAlignment="Center" FontSize="16" Foreground="White"/>
                                <TextBox Width="150" HorizontalAlignment="Center" Height="30" Margin="0 20"/>

                                <Button Style="{StaticResource imageSectionButton}" Margin="0 5 0 -10" Content="이미지 분석" FontSize="17" FontWeight="SemiBold"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <!-- Chart Section -->
                    <Border Grid.Row="2" Grid.ColumnSpan="3" CornerRadius="10" Background="#7163ba">
                        <Grid>
                            <TextBlock Margin="10" Text="불량 유형 순위" FontSize="17" Foreground="white" FontWeight="SemiBold" />
                            <ScottPlot:WpfPlot x:Name="WpfPlot3"/>
                        </Grid>
                    </Border>

                    <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
                </Grid>

                <!-- Right Section -->
                <Grid Background="White" Grid.Column="2">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- Manager View Section -->
                        <Grid Grid.Row="0">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="15 20 0 0">
                                <Ellipse Width="45" Height="45">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="/Images/1.png"/>
                                    </Ellipse.Fill>
                                </Ellipse>

                                <TextBlock Text="SF_ZONE님 환영합니다." VerticalAlignment="Center" Margin="10 0 0 0" FontSize="15" FontWeight="Medium"/>
                            </StackPanel>
                        </Grid>

                        <!-- Chart Section -->
                        <Grid Grid.Row="1" Margin="0 0 10 0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- TextBlock의 높이에 맞게 -->
                                <RowDefinition Height="*"/>
                                <!-- 차트가 남은 공간을 차지 -->
                            </Grid.RowDefinitions>

                            <TextBlock Text="월별 할당량" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,10"
                               Grid.Row="0"/>

                            <ScottPlot:WpfPlot x:Name="WpfPlot1" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Stretch" 
                               Grid.Row="1"/>
                        </Grid>

                        <Grid Grid.Row="2" Margin="0 0 10 10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <!-- TextBlock의 높이에 맞게 -->
                                <RowDefinition Height="*"/>
                                <!-- 차트가 남은 공간을 차지 -->
                            </Grid.RowDefinitions>

                            <TextBlock Text="하루 불량률" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center" 
                               Margin="0,10,0,10"
                               Grid.Row="0"/>

                            <ScottPlot:WpfPlot x:Name="WpfPlot2" 
                               HorizontalAlignment="Stretch" 
                               VerticalAlignment="Stretch" 
                               Grid.Row="1"/>
                        </Grid>
                    </Grid>
                    
                </Grid>

            </Grid>
        </Border>
    </Border>
</Window>