<Window x:Class="batteryQI.Views.ErrorInfoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="550" Width="800">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="불량 정보 확인" HorizontalAlignment="Center" FontSize="30" Margin="0 20" FontWeight="SemiBold"/>

        <Border Grid.Row="1" Grid.Column="0" CornerRadius="10" Margin="20 20 20 20">
            <Border.Background>
                <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="White" Offset="1.2"/>
                </LinearGradientBrush>
            </Border.Background>

            <Image Source="{Binding battery.BatteryBitmapImage}" x:Name="ErrorInfoImage" Stretch="Fill" Height="300"/>
        </Border>

        <Border Grid.Row="1" Grid.Column="1" CornerRadius="10" Padding="10" Margin="10">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <!-- Battery Info -->
                    <TextBlock Grid.Row="0" Text="배터리 아이디" FontSize="16" FontWeight="SemiBold" Margin="10 0 0 0"/>
                    <TextBlock Grid.Row="1" Text="제조사" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="2" Text="촬영일자" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="3" Text="촬영 장소" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="4" Text="사용처" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="5" Text="배터리 타입" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="6" Text="배터리 형태" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="7" Text="관리자" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="8" Text="불량 여부" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="9" Text="결함 종류" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                </Grid>
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="{Binding battery.ManufacName, StringFormat=제조사 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="1" Text="{Binding battery.ShootDate, StringFormat=촬영일자 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="2" Text="{Binding battery.ShootPlace, StringFormat=촬영 장소 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="3" Text="{Binding battery.Usage, StringFormat=사용처 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="4" Text="{Binding battery.BatteryType, StringFormat=배터리 타입 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="5" Text="{Binding battery.BatteryShape, StringFormat=배터리 형태 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <!--<TextBlock Grid.Row="6" Text="{Binding Manager.ManagerID, StringFormat=관리자 ID: : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>-->
                    <TextBlock Grid.Row="7" Text="{Binding battery.DefectStat, StringFormat=불량 여부 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                    <TextBlock Grid.Row="8" Text="{Binding battery.DefectName, StringFormat=결함 종류 : {0}}" FontSize="16" FontWeight="SemiBold" Margin="10 10 0 0"/>
                </Grid>
            </Grid>
        </Border>

        <Button Grid.Row="2" Grid.ColumnSpan="2" Content="확인" Width="200" Height="50" Command="{Binding confirmErrorInfoButton_ClickCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>



    </Grid>
</Window>
